// Enumeration.
// Enumeratioon merupakan salah satu fitur yang bisa kita gunakan untuk menyimpan
// kumpulan objek yang telah didefinisikan menjadi tipe data konstanta.

// Contoh :

fun main() {
    val colorRed = color.RED
    val colorGreen = color.GREEN
    val colorBlue = color.BLUE

}

enum class Color(val value: Int) {
    RED(0xFF0000),
    GREEN(0xFF000C),
    BLUE(0xFF000FF),

}

when (Color){
    Color.RED -> println("Color is Red")
    Color.GREEN -> println("Color is green")
    Color.BLUE -> println("Color is blue")

}

// Contoh 2 :
fun main() {
    val colorRed = Color.RED
    val colorGreen = Color.GREEN
    val colorBlue = Color.BLUE

    // Contoh penggunaan `when` dengan variabel `colorRed`
    when (colorRed) {
        Color.RED -> println("Color is Red")
        Color.GREEN -> println("Color is Green")
        Color.BLUE -> println("Color is Blue")
    }
}

enum class Color(val value: Int) {
    RED(0xFF0000),
    GREEN(0x00FF00),
    BLUE(0x0000FF),
}
